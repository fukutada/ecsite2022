---
title: フクタ模型店
layout: layout.njk
pagination:
  data: items
  size: 1
  alias: item
permalink: 'product/{{ pagination.items[0].url | slugify }}/'
cssPath: ../../css/
scriptPath: ../../js/product
imgPath: ../../images/
---

<main class="prod">
  <div class="prod_imgs">
  <div class="prod_img_main">
    {# 大きな画像のの表示　 #}
    <img src="../../images/{{ item.url }}/{{ item.itemphotos[0] }}" alt=""/>
    </div>
    <div class="prod_img_sub">
      {# 全ての画像 #}
      <img src="../../images/{{ item.url }}/{{ item.itemphotos[0] }}" alt=""/>
      <img src="../../images/{{ item.url }}/{{ item.itemphotos[1] }}" alt=""/>
      <img src="../../images/{{ item.url }}/{{ item.itemphotos[2] }}" alt=""/>
       <img src="../../images/{{ item.url }}/{{ item.itemphotos[3] }}" alt=""/>
      </div>
    </div>
    <div class="prod_text">
<ul>
  {# 商品名 #}
    <li class="prod_text_main">
      <p class="prod_text_name">{{ item.name}}</p>
      </li>
    {# 説明 #}
    <li class="prod_text_main">
      <p class="prod_text_link">{{ item.text}}</p>
      </li>
    {# 価格 #}
    <li class="prod_text_main">
       <p class="prod_text_head">価格</p>
      <p class="prod_text_link">{{ item.price}}円</p>
    </li>
    {# 購入数量 #}
    <li class="prod_text_main">
     <p class="prod_text_head">購入数量</p>
    <input type="number" value="0" min="0">
    </li>
  
      {# その他の情報 #}
    <li class="prod_text_info">
       <p class="prod_text_sub">型番</p>
     <p > {{ item.id}}</p>
       <p class="prod_text_sub">色</p>
     <p > {{ item.colors}}</p>
       <p class="prod_text_sub">製造元</p>
     <p > {{ item.maker}}</p>
    
      </li>
      {# ボタン #}
<div class="btns">
    <button><p class="prod_count">カートに入れる<p></button>
    <button><p class="prod_state">{{item.state}}<p></button>
    </div>
</ul>
</div>
</main>

